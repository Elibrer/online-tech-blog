<head>
  <link rel="stylesheet" href="/css/home.css"> 
</head>


<div class="w-100 justify-content-center">
  <span style="display:none;" id="logged-in">{{logged_in}}</span>
  <div class="w-100 post-form container-fluid d-flex flex-column justify-content-center mb-2" id="recent-post-container">
    <header class="w-100 text-center">
      <h2 class="justify-content-center">Recent Blog Posts</h2>
    </header>
    <ul class="list-group w-100">
    {{#each posts as |post|}}
      <li data-id="{{post.id}}" class="blog-post list-group-item post-list-item rounded">
        <div class="post-box p-2">
          <h3 class="mb-0 text-break post-name">{{post.post_name}}</h3>
          <div class="d-flex align-items-center justify-content-end ">
            <p class="font-weight-bold">{{post.user.username}}</p>
            <p style="color: var(--white);" class="mx-3">|</p>
            <p class="font-weight-bold">{{post.post_date}}</p>
          </div>
        </div>
      </li>
      <div class="m-2"></div>
    {{/each}}
    </ul> 
  </div>
    
    <div id="home-modal" class="modal">
      <div class="post-modal modal-content">
        <span id="signup-close" class="d-flex justify-content-end post-modal-close">&times;</span>
        <ul class="list-group">
          <li class="list-group-modal list-group-item rounded current-post">        
            <div class="d-flex justify-content-between blog-post post-box p-2">
              <h3  id="post-title"></h3>
              <div class="user-container">
                <h5 id="post-author"></h5>
                <p style="color: var(--white);" class="mx-3">|</p>
                <p  id="post-date" ></p>
              </div>               
            </div>
            <div> 
              <p id="post-content" class="border-top p-2 m-0"></p>
            </div>
            
          </li>
          {{#if logged_in}}
          <li class="align-items-center post-box pt-2">
            <div class="d-flex flex-row align-items-center justify-content-between px-2">
              <a class="text-center text-xl" id="add-comment">Add Comment as <span data-id="{{currentUser.id}}" id="current-user-name">{{currentUser.username}}</span></a>
            </div>
            <div id="add-comment-container" class="comment-box">
              <textarea style="display: none;" id="add-comment-text" required="true" class="w-100 form-control" rows="1"></textarea>
              <input style="display: none;" id="comment-submit" type="submit" name="Submit" value="Submit" class="pageButtons comment-submit" />
            </div>
          </li>
          {{/if}}
          <li class="rounded">
            <div class="d-flex flex-row align-items-center justify-content-between p-2">
              <h6 class="m-0 font-weight-bold">Comments</h6>
              {{#unless logged_in}}
              <p style="font-style: italic; font-size: .9rem;">Log in to leave a comment</p>
              {{/unless}}
            </div>
            <ul  class="text-break list-group comment-id ">

            </ul>
          </li>
        </ul> 
      </div>
    </div>
  </div>

  <script src="/js/home.js"></script>
</div>