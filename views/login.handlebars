<head>
  <link rel="stylesheet" href="/css/login-page.css" />
</head>

<div class="container container-fluid mt-2">
  <form class="login-form">
    <h2
      class="d-flex justify-content-center"
      style="font-size: 2em; font-weight: bolder; letter-spacing: 10px;"
    >
      Login
    </h2>

    <p class="login-text">
      <span class="fa-stack fa-lg">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-lock fa-stack-1x"></i>
      </span>
    </p>
    <input
      type="email"
      id="email-login"
      class="email-login"
      autofocus="true"
      required="true"
      placeholder="Email"
    />
    <input
      type="password"
      id="password-login"
      class="login-password"
      required="true"
      placeholder="Password"
    />
    <input type="submit" name="Login" value="Login" class="login-submit" />
    <div>
      <a
        class="login-signup text-center text-gray-700 font-bold text-xl"
        id="signup-link"
      >Don't have an account? Sign up</a>
    </div>
  </form>

  <div id="signup-modal" class="modal">
    <div class="modal-content login-modal w-1/3">
      <span
        id="signup-close"
        class="d-flex justify-content-end signup-close"
      >&times;</span>
      <div class="flex flex-col items-center">
        <p class="text-center text-gray-700 font-bold text-xl">Enter your
          details:</p>
        <form>
          <div>
            <div class="form-group col d-flex justify-content-center">
              <label
                for="username-signup"
                style="width: 100px;"
              >Username:</label>
              <input class="form-input" type="text" id="username-signup" />
            </div>
          </div>
          <div class="form-group col d-flex justify-content-center">
            <label for="email-signup" style="width: 100px;">Email:</label>
            <input class="form-input" type="text" id="email-signup" />
          </div>
          <div class="form-group col d-flex justify-content-center">
            <label for="password-signup" style="width: 100px;">Password:</label>
            <input class="form-input" type="password" id="password-signup" />
          </div>
        </form>

        <input
          id="signup-submit"
          type="submit"
          name="Signup"
          value="Signup"
          class="signup-submit"
        />
        <input
          type="submit"
          name="Cancel"
          value="Cancel"
          class="signup-close signup-cancel"
        />

        {{! <button id="signup-submit"
          class="d-flex text-center mt-4 bg-blue-500 hover:bg-blue-700 text-dark font-bold py-2 px-4 rounded">Sign Up</button> }}
        {{! <button id="signup-cancel"
          class="d-flex text-center mt-4 bg-blue-500 hover:bg-blue-700 text-dark font-bold py-2 px-4 rounded">Cancel</button> }}
      </div>
    </div>
  </div>

</div>

<script src="/js/login.js"></script>